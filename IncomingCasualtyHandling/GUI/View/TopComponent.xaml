<UserControl x:Class="IncomingCasualtyHandling.GUI.View.TopComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IncomingCasualtyHandling.GUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#2D3843">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>



        <Grid Grid.Column="1">
            <Label Name="DateTimeLabel" Foreground="White" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Content="{Binding CurrentDateTime}"></Label>
        </Grid>

    </Grid>
</UserControl>
