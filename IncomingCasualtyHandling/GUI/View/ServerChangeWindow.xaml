<Window x:Class="IncomingCasualtyHandling.GUI.View.ServerChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IncomingCasualtyHandling.GUI.View"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">Specify name of new FHIR compliant server</Label>
            <TextBox Margin="10" Name="ServerName"></TextBox>
            <Button Margin="10" Content="OK" IsDefault="True" Click="btnOk_Click" ></Button>
        </StackPanel>
    </Grid>
</Window>
