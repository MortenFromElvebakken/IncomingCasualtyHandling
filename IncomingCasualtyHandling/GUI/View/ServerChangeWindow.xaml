<Window x:Class="IncomingCasualtyHandling.GUI.View.ServerChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IncomingCasualtyHandling.GUI.View"
        mc:Ignorable="d"
        Title="Choose FHIR server" Height="250" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label Margin="10,10,10,5" VerticalAlignment="Center" HorizontalAlignment="Center">Specify name of new FHIR compliant server</Label>
            <TextBox Margin="10,5,10,10" Name="ServerName" Height="40px" FontSize="16" VerticalContentAlignment="Center"></TextBox>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center">
                Example of FHIR server URL "http://localhost:8080/hapi-fhir-jpaserver-example/baseDstu3"
            </Label>
            <Button Margin="10" Content="OK" IsDefault="True" Click="btnOk_Click" Height="30px"></Button>
        </StackPanel>
    </Grid>
</Window>
