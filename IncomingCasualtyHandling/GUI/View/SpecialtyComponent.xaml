                        <MouseBinding MouseAction="LeftClick"  Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.ChangeViewCommand}"></MouseBinding>
                    </StackPanel.InputBindings>
                    <Button Name="Specialty1Button" Style="{StaticResource SquaredRoundedButton}" Background="{Binding Specialty1.Colour}" Width="10"></Button>
                    <Label Name="Specialty1Name" Width="100" Content="{Binding Specialty1.Name}" VerticalAlignment="Center" HorizontalAlignment="Left"></Label>
                    <Label Name="Specialty1Count" Width="50" Content="{Binding Specialty1.Amount}" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                </StackPanel>
                
