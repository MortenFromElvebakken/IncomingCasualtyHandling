<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="SpecialtyGrid" TargetType="{x:Type Grid}">
        <Setter Property="MaxHeight" Value="500px"/>
        <Setter Property="MinHeight" Value="50px"/>
        <Setter Property="Margin" Value="10,2.5,10,2.5"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="ColourColumn" TargetType="{x:Type ColumnDefinition}">
        <Setter Property="Width" Value="20px"/>
    </Style>
    <Style x:Key="AmountColumn" TargetType="{x:Type ColumnDefinition}">
        <Setter Property="Width" Value="50px"/>
    </Style>
</ResourceDictionary>